<config>
  <execution>
    <all>
      <tag>blacklisting</tag>
      <any>
        <tag>specific</tag>
        <!-- <tag>generic</tag> -->
      </any>
    </all>
  </execution>
  
  <rule>
    <name>source arch</name>
    <match>
      <or>
        <arch>src</arch>
        <arch>nosrc</arch>
      </or>
    </match>
    
    <rpm-file-size-bytes>
      <fail/>
    </rpm-file-size-bytes>
  </rule>
  
  <!-- Module rules -->
  
  <rule>
    <name>module maven</name>
    <match>
      <release>.*\.mm</release>
    </match>
  </rule>
  
  <rule>
    <name>module ant</name>
    <match>
      <release>.*\.am</release>
    </match>
  </rule>
  
  <rule>
    <name>module jp-runtime</name>
    <match>
      <release>.*\.jpr</release>
    </match>
  </rule>
  
  <rule>
    <name>module jp-tools</name>
    <match>
      <release>.*\.jpt</release>
    </match>
  </rule>
  
  <rule>
    <name>module jp-bootstrap</name>
    <match>
      <release>.*\.jpb</release>
    </match>
  </rule>
  
  <rule>
    <name>provides</name>
    <tag>generic</tag>
    <match/>
    
    <provides>
      <fail/>
    </provides>
  </rule>
  
  <rule>
    <name>requires</name>
    <tag>generic</tag>
    <match/>
    
    <requires>
      <fail/>
    </requires>
  </rule>
  
  <rule>
    <name>conflicts</name>
    <tag>generic</tag>
    <match/>
    
    <conflicts>
      <fail/>
    </conflicts>
  </rule>
  
  <rule>
    <name>obsoletes</name>
    <tag>generic</tag>
    <match/>
    
    <obsoletes>
      <fail/>
    </obsoletes>
  </rule>
  
  <rule>
    <name>recommends</name>
    <tag>generic</tag>
    <match/>
    
    <recommends>
      <fail/>
    </recommends>
  </rule>
  
  <rule>
    <name>suggests</name>
    <tag>generic</tag>
    <match/>
    
    <suggests>
      <fail/>
    </suggests>
  </rule>
  
  <rule>
    <name>supplements</name>
    <tag>generic</tag>
    <match/>
    
    <supplements>
      <fail/>
    </supplements>
  </rule>
  
  <rule>
    <name>enhances</name>
    <tag>generic</tag>
    <match/>
    
    <enhances>
      <fail/>
    </enhances>
  </rule>
  
  <rule>
    <name>order-with-requires</name>
    <tag>generic</tag>
    <match/>
    
    <order-with-requires>
      <fail/>
    </order-with-requires>
  </rule>
  
  <include-file>config-ant.xml</include-file>
</config>
